
<%= render 'shared/errors', obj: @user %>

<div class='row'>
	<div class='col-xs-12'>
		<!--<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %> -->
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :name %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :name, class: "form-control", placeholder: "Enter your first name", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :surname %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :surname, class: "form-control", placeholder: "Enter your  surname", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :age %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :age, class: "form-control", placeholder: "Enter your age", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :education %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :education, class: "form-control", placeholder: "Enter your highest education status", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :experience %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :experience, class: "form-control", placeholder: "Describe your experience in previous work", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :knowledge %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :knowledge, class: "form-control", placeholder: "Describe software/hardware that you have knowledge of", autofocus: true %>
		</div>
		</div>
		<div class="form-group ">
		<div class="control-label col-sm-2 col-sm-offset-2">
			<%= f.label :availability %>
		</div>
		<div class="col-sm-4 ">
			<%= f.text_field :availability, class: "form-control", placeholder: "Please specify your availability for 'Pitch In' Projects e.g Part-time/Full Time/Hobby", autofocus: true %>
		</div>
		</div>
		<!--TODO: SUBMIT DATA TO USER.PROFILE TABLE -->
		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-10">
			 <!--<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %> -->
			</div>
		</div>
		<% end %>
		<div align="center" class="col-xs-4 col-xs-offset-4">
		[ <%= link_to "Cancel Request", pages_home_path %> ]
		</div>
	</div>
</div>